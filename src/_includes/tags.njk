---
eleventyExcludeFromCollections: true
layout: default
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - article
  addAllPagesToCollections: true
renderData:
  title: Tagged “{{ tag }}”
permalink: /{{ tag }}/
---
<div class="content {% if category %}{{ category }}{% else %}index{% endif %} {% if offwhite %}offwhite_content{% endif %} tags_njk">

  <div class="wrapper">

    <div class="tagpage tagpage__title">

      <span class="tagpage__ico roh">
        <svg class="tag">
          <use xlink:href="#icn--tag"></use>
        </svg>
      </span>

      <h1 class="page__title">{{ tag | capitalize }}</h1>

    </div>

    <div class="tagpage post_cards">
      {% set postslist = collections[ tag ] %}

      {% for post in postslist | reverse %}

        {% include "partials/index_post_block--excerpt.njk" %}

      {% endfor %}

      {% include "partials/tag_cloud.njk" %}
    </div>

  </div>

</div>
